<article class="page small-12 columns" itemtype="http://schema.org/Article" role="article">
  <header class="page-header">
    <h1 class="page-title" itemprop="name">
      {% if view_mode == 'teaser' %}
        <a href="{{page.permalink}}">{{page.title}}</a>
      {% else %}
        {{page.title}}
      {% endif %}
    </h1>
    <div class="page-meta">
      <time itemprop="datePublished" datetime="{{ page.datetime | date('Y-m-dTH:i:sz')}}">{{ page.datetime | date('M d, Y') }}</time>
    </div>
  </header>
  <div>{% if view_mode == 'teaser' %}{{page.excerpt}}{% else %}{{page.body}}{% endif %}</div>
</article>
